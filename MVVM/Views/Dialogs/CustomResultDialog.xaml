<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagement.MVVM.Views.Dialogs.CustomResultDialog"
             BackgroundColor="{AppThemeBinding Light={StaticResource Background1}, Dark={StaticResource BackgroundDark3}}">

    <Grid WidthRequest="250" HeightRequest="110">
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="170" />
        </Grid.ColumnDefinitions>

        <Image x:Name="dialog_image" Grid.RowSpan="2" Grid.Column="0" 
            IsAnimationPlaying="True"
            Margin="10,5,10,5"
            HeightRequest="50"
            WidthRequest="50"
            />

        <Label x:Name="dialog_label" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
            HorizontalOptions="StartAndExpand" 
            VerticalOptions="Center"
            FontAttributes="Bold"
            Margin="5,5,5,5"/>
    </Grid>
</ContentView>
